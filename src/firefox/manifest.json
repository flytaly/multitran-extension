{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "strict_min_version": "75.0",
            "id": "multitran@flytaly"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content/content.js"],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["js/background/background.js"]
    },
    "web_accessible_resources": [
        "styles/content-popup.css",
        "images/flags/us.svg",
        "images/flags/uk.svg",
        "images/flags/au.svg",
        "images/flags/ru.svg"
    ],
    "default_locale": "en",
    "description": "__MSG_description__",
    "name": "__MSG_name__",
    "short_name": "Multitran-popup",
    "version": "1.3.0",
    "homepage_url": "https://github.com/flytaly/multitran-extension",
    "icons": {
        "48": "images/icon_light-48.png",
        "64": "images/icon_light-64.png",
        "96": "images/icon_light-96.png"
    },
    "permissions": ["storage", "https://www.multitran.com/*"],
    "browser_action": {
        "default_title": "__MSG_extension_title__",
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "64": "images/icon-64.png"
        },
        "theme_icons": [
            {
                "dark": "images/icon-16.png",
                "light": "images/icon_light-16.png",
                "size": 16
            },
            {
                "dark": "images/icon-32.png",
                "light": "images/icon_light-32.png",
                "size": 32
            },
            {
                "dark": "images/icon-64.png",
                "light": "images/icon_light-64.png",
                "size": 64
            }
        ],
        "default_popup": "popup.html",
        "browser_style": true
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+M"
            }
        }
    }
}
