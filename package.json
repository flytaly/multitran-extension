{
    "name": "multitran-extension",
    "version": "1.6.0",
    "description": "Multitran Browser extension",
    "main": "manifest.json",
    "scripts": {
        "d:prepare": "esno scripts/prepare.js",
        "js": "esno scripts/esbuild.config.js",
        "styles:watch": "tailwind -i src/styles/content-popup.css -o extension/dist/styles.css -w",
        "styles:build": "tailwind -o extension/dist/styles.css -m",
        "web-ext:ff": "web-ext run --source-dir extension",
        "web-ext:chrome": "web-ext run --target chromium --source-dir extension",
        "dev:chrome": "cross-env NODE_ENV=development TARGET=chrome run-p d:prepare js styles:watch web-ext:chrome",
        "dev:ff": "cross-env NODE_ENV=development TARGET=firefox run-p d:prepare js styles:watch web-ext:ff",
        "build:chrome": "cross-env TARGET=chrome run-s d:prepare js styles:build",
        "build:ff": "cross-env TARGET=firefox run-s d:prepare js styles:build",
        "buildzip:chrome": "run-s build:chrome zip",
        "buildzip:ff": "run-s build:ff zip",
        "zip": "web-ext build --source-dir extension",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "dependencies": {
        "@babel/preset-env": "^7.16.5",
        "@types/webextension-polyfill": "^0.8.2",
        "autoprefixer": "^10.4.0",
        "chokidar": "^3.5.2",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.8",
        "eslint": "^8.5.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-prettier": "^4.0.0",
        "esno": "^0.13.0",
        "fs-extra": "^10.0.0",
        "html-loader-jest": "^0.2.1",
        "jest": "^27.4.5",
        "jest-fetch-mock": "^3.0.3",
        "kolorist": "^1.5.1",
        "npm-run-all": "^4.1.5",
        "prettier": "2.5.1",
        "tailwindcss": "^3.0.8",
        "web-ext": "^6.6.0",
        "webextension-polyfill": "^0.8.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js"
        ],
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.html?$": "html-loader-jest"
        }
    }
}
