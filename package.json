{
    "name": "multitran-extension",
    "version": "1.5.0",
    "description": "Multitran Firefox extension",
    "main": "manifest.json",
    "scripts": {
        "prepare": "esno scripts/prepare.js",
        "js": "esno scripts/esbuild.config.js",
        "styles:watch": "tailwind -o extension/styles.css -w",
        "styles:build": "tailwind -o extension/styles.css -m",
        "web-ext:ff": "web-ext run --source-dir extension",
        "web-ext:chrome": "web-ext run --target chromium --source-dir extension",
        "dev:chrome": "cross-env NODE_ENV=development TARGET=chrome run-p prepare js styles:watch web-ext:chrome",
        "dev:ff": "cross-env NODE_ENV=development TARGET=firefox run-p prepare js styles:watch web-ext:chrome",
        "build:chrome": "cross-env TARGET=chrome run-s prepare js styles:build",
        "build:ff": "cross-env TARGET=chrome run-s prepare js styles:build",
        "buildzip:chrome": "run-s build:chrome zip",
        "buildzip:ff": "run-s build:ff zip",
        "zip": "web-ext build --source-dir extension",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "dependencies": {
        "@babel/preset-env": "^7.15.8",
        "autoprefixer": "^10.3.7",
        "cross-env": "^7.0.3",
        "esbuild": "^0.13.5",
        "eslint": "^7.9.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "esno": "^0.10.1",
        "fs-extra": "^10.0.0",
        "html-loader-jest": "^0.2.1",
        "jest": "^26.4.2",
        "jest-fetch-mock": "^3.0.3",
        "kolorist": "^1.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "2.4.1",
        "tailwindcss": "^2.2.17",
        "web-ext": "^6.5.0",
        "webextension-polyfill": "^0.8.0",
        "webextension-polyfill-ts": "^0.26.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.html?$": "html-loader-jest"
        }
    },
    "devDependencies": {
        "chokidar": "^3.5.2"
    }
}
