{
    "name": "multitran-extension",
    "version": "1.7.0",
    "description": "Multitran Browser extension",
    "main": "manifest.json",
    "scripts": {
        "d:prepare": "esno scripts/prepare.js",
        "js": "esno scripts/esbuild.config.js",
        "tw": "tailwind -i src/common-styles.css -o extension/dist/styles.css",
        "styles:watch": "npm run tw -- -w",
        "styles:build": "npm run tw -- -m",
        "web-ext:ff": "web-ext run --source-dir extension",
        "web-ext:chrome": "web-ext run --target chromium --source-dir extension",
        "dev:chrome": "cross-env NODE_ENV=development TARGET=chrome run-p d:prepare js styles:watch web-ext:chrome",
        "dev:ff": "cross-env NODE_ENV=development TARGET=firefox run-p d:prepare js styles:watch web-ext:ff",
        "build:chrome": "cross-env TARGET=chrome run-s d:prepare js styles:build",
        "build:ff": "cross-env TARGET=firefox run-s d:prepare js styles:build",
        "buildzip:chrome": "run-s build:chrome zip",
        "buildzip:ff": "run-s build:ff zip",
        "zip": "web-ext build --source-dir extension",
        "lint": "eslint ./src",
        "lint:fix": "eslint --fix ./src",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "author": "Vitaly Yerofeyevsky",
    "license": "MPL-2.0",
    "dependencies": {
        "@babel/preset-env": "^7.16.11",
        "@types/webextension-polyfill": "^0.8.3",
        "autoprefixer": "^10.4.5",
        "chokidar": "^3.5.3",
        "cross-env": "^7.0.3",
        "esbuild": "^0.14.38",
        "eslint": "^8.14.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "esno": "^0.14.1",
        "fs-extra": "^10.1.0",
        "jest": "^28.0.2",
        "jest-environment-jsdom": "^28.0.2",
        "kolorist": "^1.5.1",
        "npm-run-all": "^4.1.5",
        "prettier": "2.6.2",
        "tailwindcss": "^3.0.24",
        "web-ext": "^6.8.0",
        "webextension-polyfill": "^0.9.0",
        "webextension-polyfill-ts": "^0.26.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js"
        ],
        "testEnvironment": "jsdom",
        "transform": {
            "^.+\\.js$": "babel-jest"
        }
    }
}
